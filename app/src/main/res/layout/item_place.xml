<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:orientation="vertical"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/cvPlace"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light">

        <LinearLayout
            android:gravity="right|center"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_weight="2"
            android:id="@+id/delete_icon"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/delete" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="Borrar"
            android:textColor="#fff"
            android:textSize="13dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="10dp">

        <ImageView
            android:src="@drawable/bar_tayta_img1"
            android:id="@+id/ivPlace"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop" />

        <TextView
            android:text="Bar El Tayta"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivPlace"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvAddress"
            android:text="Av. Larco 437, Miraflores"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ivPlace"
            android:textSize="16sp" />

    <!--  <android.support.v7.widget.AppCompatRatingBar
          android:layout_below="@id/tvAdress"
          android:layout_toRightOf="@id/ivPlace"
          android:numStars="5"
          android:rating="3"
          android:layout_width="wrap_content"
          android:layout_height="30dp" /> -->

    </RelativeLayout>

</android.support.v7.widget.CardView>